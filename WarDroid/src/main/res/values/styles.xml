<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <!-- Set AppCompat’s actionBarStyle -->
        <!--  <item name="actionBarStyle">@style/MyActionBarStyle</item>  -->

        <!-- Set AppCompat’s color theming attrs -->
        <!--  <item name="colorPrimary">@color/my_awesome_red</item>  -->
        <!-- <item name="colorPrimaryDark">@color/my_awesome_darker_red</item>  -->
    </style>

<!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!--<item name="listPreferredItemHeightSmall">48dp</item>
        <item name="listPreferredItemPaddingEnd">10dip</item>
        <item name="listPreferredItemPaddingStart">10dip</item>-->
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="drawerActivated">
        <item name="android:cacheColorHint">@null</item>
    </style>

    <style name="marginPoint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="selectableView">
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>
</resources>
